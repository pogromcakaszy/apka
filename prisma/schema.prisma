generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}
// models //

model Test {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}


model Role {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  users User[]
}

model Status {
  id    Int     @id @default(autoincrement())
  name  String  @unique  // np. aktywny, zablokowany
  users User[]
}

model User {
  id         Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  roleId    Int
  statusId  Int
  phone     String
  createdAt DateTime @default(now())

  role      Role     @relation(fields: [roleId], references: [id])
  status    Status   @relation(fields: [statusId], references: [id])
}